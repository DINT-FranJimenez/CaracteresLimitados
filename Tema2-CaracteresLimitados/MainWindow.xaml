<Window x:Name="Caracteres_limitados" x:Class="Tema2_CaracteresLimitados.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema2_CaracteresLimitados"
        mc:Ignorable="d"
        Title="Caracteres limitados" Height="360" Width="545">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0,1">
                <GradientStop Color="IndianRed" Offset="0.1"/>
                <GradientStop Color="White" Offset="0.9"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox
            x:Name="caracteresLimitadosTextBox"
            TextWrapping="Wrap" 
            Margin="40,22,39,76"
            MaxLength="140"
            TextChanged="CaracteresLimitados_TextChanged"
            />
        <Label
            x:Name="cuentaCaracteresLabel"
            Content="0/140" 
            HorizontalAlignment="Left" 
            Margin="426,268,0,0"
            FontSize="18"
            Foreground="Gray"
            VerticalAlignment="Top" 
            Width="80"/>

    </Grid>
</Window>
